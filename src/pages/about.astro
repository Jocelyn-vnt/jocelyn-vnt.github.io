    <style>
      /* S'assurer que la page peut scroller */
      body {
        min-height: 300vh;
        overflow-x: hidden;
      }
      
      /* Optimiser les √©l√©ments parallax */
      .parallax {
        will-change: transform;
        backface-visibility: hidden;
        perspective: 1000px;
        transition: transform 0.1s ease-out;
      }
      
      /* Animation d'apparition am√©lior√©e */
      @keyframes slideInFromBottom {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .parallax-appear {
        animation: slideInFromBottom 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
      }

      /* Effet de hover am√©lior√© */
      .parallax:hover {
        z-index: 100;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4), 0 10px 20px rgba(0, 0, 0, 0.3);
      }

      /* Effet de trail pour le mouvement rapide */
      .parallax.moving-fast {
        filter: blur(1px) brightness(1.1);
        transition: filter 0.1s ease;
      }
    </style>
    
    <!-- Script pour le parallax invers√© -->
    <script>
      // Script pour hover parallax invers√© (bas vers haut)
      document.addEventListener("DOMContentLoaded", () => {
          // Configuration des vitesses pour chaque √©l√©ment parallax
          const parallaxConfig = {
              'slow': { speed: -2.5, trigger: 100 },      // Lent mais plus rapide que le scroll
              'medium': { speed: -3.8, trigger: 150 },    // Moyen
              'fast': { speed: -5.2, trigger: 200 },      // Rapide
              'ultra': { speed: -4.0, trigger: 250 },     // Ultra
              'turbo': { speed: -6.5, trigger: 300 }      // Turbo (le plus rapide)
          };

          // S√©lectionner tous les √©l√©ments parallax
          const parallaxElements = document.querySelectorAll('.parallax');
          
          // Variables pour optimiser les performances
          let ticking = false;
          let currentScrollY = 0;
          let targetScrollY = 0;
          
          console.log(`üöÄ Parallax invers√© initialis√© avec ${parallaxElements.length} √©l√©ments`);

          // Fonction pour d√©tecter le type d'√©l√©ment par son contenu
          function getElementType(element) {
              const text = element.textContent || '';
              if (text.includes('Slow')) return 'slow';
              if (text.includes('Medium')) return 'medium';
              if (text.includes('Fast')) return 'fast';
              if (text.includes('Ultra')) return 'ultra';
              if (text.includes('Turbo')) return 'turbo';
              return 'medium'; // par d√©faut
          }

          // Fonction pour appliquer le parallax invers√©
          function applyInverseParallax() {
              // Interpolation douce pour un mouvement fluide
              currentScrollY += (targetScrollY - currentScrollY) * 0.08;
              
              parallaxElements.forEach((element) => {
                  const elementType = getElementType(element);
                  const config = parallaxConfig[elementType];
                  
                  // Calcul de la position invers√©e (plus le scroll est vers le bas, plus l'√©l√©ment monte)
                  const yPos = currentScrollY * config.speed;
                  
                  // Appliquer la transformation avec GPU acceleration
                  element.style.transform = `translate3d(0, ${yPos}px, 0)`;
                  
                  // Effet de d√©clenchement bas√© sur la position de scroll
                  const triggerPoint = window.innerHeight * (config.trigger / 100);
                  if (window.scrollY > triggerPoint && element.style.opacity === '0') {
                      element.style.opacity = '1';
                      element.classList.add('parallax-appear');
                  }
              });
              
              // Animation continue
              requestAnimationFrame(applyInverseParallax);
          }

          // Event listener pour capturer le scroll
          function onScroll() {
              targetScrollY = window.scrollY;
              
              if (!ticking) {
                  ticking = true;
                  requestAnimationFrame(() => {
                      ticking = false;
                  });
              }
          }

          // Fonction d'initialisation des √©l√©ments
          function initializeElements() {
              parallaxElements.forEach((element, index) => {
                  // Optimisations pour les performances GPU
                  element.style.willChange = 'transform';
                  element.style.backfaceVisibility = 'hidden';
                  element.style.perspective = '1000px';
                  
                  // √âtat initial (cach√©)
                  element.style.opacity = '0';
                  element.style.transition = 'opacity 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                  
                  // Ajouter les classes pour l'animation d'apparition
                  setTimeout(() => {
                      element.classList.add('parallax-initialized');
                  }, index * 100);
              });
          }

          // Effet de survol am√©lior√© avec acc√©l√©ration
          function enhanceHoverEffects() {
              parallaxElements.forEach((element) => {
                  element.addEventListener('mouseenter', () => {
                      const elementType = getElementType(element);
                      const config = parallaxConfig[elementType];
                      
                      // Acc√©l√©ration temporaire lors du hover
                      const currentY = currentScrollY * config.speed;
                      const acceleratedY = currentY - 50; // Boost vers le haut
                      
                      element.style.transition = 'transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1)';
                      element.style.transform = `translate3d(0, ${acceleratedY}px, 0) scale(1.05)`;
                      
                      // Effet de brillance
                      element.style.filter = 'brightness(1.1) contrast(1.05)';
                  });
                  
                  element.addEventListener('mouseleave', () => {
                      // Retour √† la position normale
                      element.style.transition = 'transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94), filter 0.3s ease';
                      const elementType = getElementType(element);
                      const config = parallaxConfig[elementType];
                      const normalY = currentScrollY * config.speed;
                      
                      element.style.transform = `translate3d(0, ${normalY}px, 0) scale(1)`;
                      element.style.filter = 'brightness(1) contrast(1)';
                      
                      // Supprimer la transition apr√®s l'animation
                      setTimeout(() => {
                          element.style.transition = '';
                      }, 400);
                  });
              });
          }

          // Event listeners
          window.addEventListener('scroll', onScroll, { passive: true });

          // Initialisation
          initializeElements();
          enhanceHoverEffects();
          applyInverseParallax(); // D√©marrer l'animation continue

          console.log("‚ú® Syst√®me de parallax invers√© avec hover activ√©!");
      });
    </script>
  </head>
  
