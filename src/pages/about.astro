---
import Layout from "../layouts/BlogPost.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import HeaderLink from "../components/HeaderLink.astro";
import CardLoader from "../components/CardLoader.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ProjectCard from "../components/ProjectCard.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  
  <!-- Background avec effet glassmorphisme -->
  <div class="fixed inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800">
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/noise.png')] opacity-20"></div>
    <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
  </div>

  <div class="fixed flex w-full justify-center items-center pt-5 z-50">
    <Header />
  </div>

  <!-- Éléments parallaxe glassmorphisme -->
  <div class="hover:scale-105 transition-transform duration-300">
    <div
      class="parallax group bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass p-8 absolute top-[100%] left-[10%] z-10 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 animate-glass-float"
      data-speed="-2"
    >
      <div class="flex gap-3 p-0 items-center">
        <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">
          Hover me
        </h2>
        <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 text-purple-300 group-hover:rotate-12 transition-transform duration-300"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
          ></path>
        </svg>
      </div>
      <figure
        class="absolute -top-[70px] right-0 opacity-0 group-hover:opacity-100 transition-all duration-500 transform group-hover:scale-105"
      >
        <div class="relative">
          <img
            src="/Kusmi-Tea.jpg"
            alt="Image Logo KusmiTea"
            class="w-40 h-auto rounded-xl shadow-glass border border-glass"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent rounded-xl"></div>
        </div>
        <figcaption
          class="absolute top-full mt-3 flex text-sm w-full"
        >
          <a href="/" class="flex bg-white/10 backdrop-blur-md border border-glass text-white hover:bg-white/20 hover:text-purple-300 font-anuphan font-medium p-3 w-full rounded-lg transition-all duration-300 justify-center shadow-glass">
            See more
          </a>
        </figcaption>
      </figure>
    </div>
  </div>

  <div
    class="parallax bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass px-6 py-4 absolute top-[150%] right-[10%] z-50 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300"
    data-speed="-1.5"
    style="animation-delay: 2s;"
  >
    <div class="flex gap-3 items-center">
      <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">
        Hover me
      </h2>
      <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 text-purple-300"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
        ></path>
      </svg>
    </div>
  </div>

  <div
    class="parallax bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass p-8 absolute top-[300%] left-[10%] z-10 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 animate-glass-float"
    data-speed="-3"
    style="animation-delay: 4s;"
  >
    <div class="flex gap-3 items-center">
      <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">Hover me</h2>
      <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 text-purple-300"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
        ></path>
      </svg>
    </div>
  </div>

  <!-- Section Content avec glassmorphisme -->
  <section
    class="flex flex-col text-white py-20 gap-8 justify-center items-center z-30 relative"
  >
    <section
      class="flex flex-col px-5 md:px-40 gap-8 md:gap-12 justify-center items-center"
    >
      <div class="w-full">
        <div class="w-full">
          <div class="relative flex flex-col items-center justify-center mb-12">
            <h1 class="text-[248px] font-bold font-anuphan relative text-white drop-shadow-2xl">
              Jocelyn
              <span
                class="absolute text-purple-400 font-alex text-[144px] font-normal bottom-0 right-0 transform drop-shadow-lg"
                >Vinatié</span
              >
            </h1>
          </div>
          <div
            class="flex flex-col md:flex-row w-full justify-center items-center gap-8"
          >
            <div class="flex flex-col items-center gap-6">
              <div class="bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-8 shadow-glass hover:bg-white/15 transition-all duration-300">
                <p
                  class="text-lg font-anuphan w-full text-center font-alex leading-relaxed"
                >
                  Creative and passionate about digital design, I specialize in
                  graphic design, UI/UX design and animation. I have worked on
                  several projects, combining aesthetics and utility.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Section avec les expériences, compétences, etc. -->
      <div class="grid grid-rows-6 grid-cols-6 grid-flow-col gap-6">
        <!-- EDUCATION -->
        <div class="col-span-2 row-span-2 bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-6 h-full w-full shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300">
          <div class="flex justify-center pb-4">
            <h1 class="text-2xl font-bold font-anuphan relative text-white">
              Education
            </h1>
          </div>
          <div class="flex flex-col h-full w-full space-y-4">
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
              <h3 class="font-bold text-lg text-purple-300">High School Diploma STI2D :</h3>
              <p class="text-gray-200">Specialty Information and Digital Systems</p>
            </div>
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
              <h3 class="font-bold text-lg text-purple-300">BUT Multimedia and Internet Professions :</h3>
              <p class="text-gray-200">Digital Creation Course</p>
            </div>
          </div>
        </div>

        <!-- EXPERIENCES -->
        <div class="col-span-2 row-span-2 bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300">
          <div class="flex justify-center pb-4">
            <h1 class="text-2xl font-bold font-anuphan relative text-white">
              Experiences
            </h1>
          </div>
          <div class="space-y-4">
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
              <h3 class="font-bold text-lg text-purple-300">SAYTOUTCOM (87)</h3>
              <p class="text-gray-200">Graphic Design - Motion design - Video editing</p>
            </div>
            <div class="bg-white/5 rounded-xl p-4 border border-white/10">
              <h3 class="font-bold text-lg text-purple-300">WENZEO (33) :</h3>
              <p class="text-gray-200">Video editing - Graphic Design - Photo editing</p>
            </div>
          </div>
        </div>



        <!-- CONTACTS -->
        <div class="row-span-3 col-span-4 bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300">
          <div class="flex justify-center pb-4">
            <h1 class="text-2xl font-bold font-anuphan relative text-white">
              Contacts
            </h1>
          </div>
          <div class="flex gap-6 justify-between">
            <form id="contact-form" class="flex flex-col gap-4 rounded-xl w-2/3 bg-white/5 p-6 border border-white/10">
              <input type="hidden" name="contact_service" value="service_evnvtit">
              <input type="hidden" name="contact_form" value="template_eiss8es">
              <input type="hidden" name="contact_number" value="697483">
              
              <label for="user_name" class="text-white font-bold font-anuphan">Name</label>
              <input type="text" name="user_name" required class="mb-2 p-3 rounded-xl text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all">
              
              <label for="user_email" class="text-white font-bold font-anuphan">Email</label>
              <input type="email" name="user_email" required class="mb-2 p-3 rounded-xl text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all">
              
              <label for="message" class="text-white font-bold font-anuphan">Message</label>
              <textarea name="message" required class="mb-2 p-3 rounded-xl text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all min-h-[100px]"></textarea>
              
              <input type="submit" value="Send" class="bg-purple-500/80 backdrop-blur-md hover:bg-purple-600/80 text-white p-3 rounded-xl cursor-pointer transition-all duration-300 font-anuphan font-bold border border-purple-400/30 hover:border-purple-400/50 shadow-glass">
           </form>
           <div class="flex w-1/3 gap-6 flex-col justify-center items-center bg-white/5 p-6 rounded-xl border border-white/10">
            <h3 class="text-white font-anuphan font-bold text-lg">Download my CV</h3>
            <div class="p-4 bg-white rounded-xl shadow-glass">
              <img src="/qrcode.png" alt="mon cv" class="w-full max-w-[150px]">
            </div>
           </div>
          </div>
        </div>

        <!-- LANGUAGES -->
        <div class="row-span-1 col-span-2 bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300">
          <div class="pb-4">
            <h1 class="text-2xl font-bold font-anuphan relative text-white text-center">
              Languages
            </h1>
          </div>
          <div class="bg-white/5 rounded-xl p-4 border border-white/10">
            <p class="w-full text-gray-200 text-center">English - French - Spanish</p>
          </div>
        </div>

        <!-- HOBBIES -->
        <div class="col-span-2 row-span-1 bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300">
          <div class="flex justify-center pb-4">
            <h1 class="text-2xl font-bold font-anuphan relative text-white">
              Hobbies
            </h1>
          </div>
          <div class="bg-white/5 rounded-xl p-4 border border-white/10">
            <p class="w-full text-gray-200 text-center">Reading - Traveling - Photography</p>
          </div>
        </div>
      </div>

      <a
        href="/"
        class="px-8 py-4 bg-white/10 backdrop-blur-lg border border-glass rounded-full font-anuphan font-bold hover:bg-white/20 hover:border-purple-400/50 hover:text-purple-300 transition-all duration-300 shadow-glass hover:shadow-glass-hover"
        >Projects</a
      >
    </section>
  </section>
</html>