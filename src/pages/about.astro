	---
	import Layout from "../layouts/BlogPost.astro";
	import BaseHead from "../components/BaseHead.astro";
	import Header from "../components/Header.astro";
	import HeaderLink from "../components/HeaderLink.astro";
	import CardLoader from "../components/CardLoader.astro";
	import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
	---
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<div class="fixed flex w-full justify-center items-center pt-5 z-50">
		<Header />
	</div>

	<section class="grid grid-cols-1 md:grid-cols-2  text-white py-20 position fixed">
		<section class="px-5 gap-5">
		<div>
			<div>
			<div>
				<img class="max-w-full h-auto mx-auto" src="/JV.svg" alt="" />
			</div>
			<p class="text-sm font-anuphan md:text-left">
				Creative and passionate about digital design, I specialize
				in graphic design, UI/UX design and animation. I have worked
				on several projects, combining aesthetics and utility. I am
				curious, I work very well in a team and I adapt.
			</p>
			</div>
		</div>
	
		<!-- Section avec les expériences, compétences, etc. -->
	<div class="grid grid-cols-1 md:grid-cols-2 text-white font-anuphan text-sm gap-[20px]">
		<!-- EDUCATION -->
		<div class="flex flex-col gap-[20px] md:items-start">
		<img class="w-auto max-h-10" src="/Edu.svg" alt="" />
		<ul>
			<li class="font-bold text-md">High School Diploma STI2D :</li>
			<li>Specialty Information and Digital Systems</li>
			<li>High School, Gustave Eiffel, Bordeaux</li>
		</ul>
		<ul>
			<li class="font-bold text-md">BUT Multimedia and Internet Professions :</li>
			<li>Digital Creation Course</li>
			<li>IUT, Limoges (87)</li>
		</ul>
		</div>
	
		<!-- EXPERIENCES -->
		<div class="flex flex-col gap-[20px] md:items-start">
		<img class="w-auto max-h-10" src="/Xp.svg" alt="" />
		<ul>
			<li class="font-bold text-md">SAYTOUTCOM (87)</li>
			<li>Graphic Design - Motion design - Video editing</li>
		</ul>
		<ul>
			<li class="font-bold text-md">WENZEO (33) :</li>
			<li>Video editing - Graphic Design - Photo editing</li>
		</ul>
		</div>
	
		<!-- SKILLS -->
		<div class="flex flex-col gap-[20px] md:items-start">
		<img class="w-auto max-h-10" src="/Skills.svg" alt="" />
		<p class="md:text-left">
			Graphic Design Illustration, Brand Design, Video Editing,
			Motion Design, UI/UX, Web Design. Communication.
		</p>
		</div>
	
		<!-- SOFTWARE -->
		<div class="flex flex-col gap-[20px] md:items-start">
		<img class="w-auto max-h-10" src="/Software.svg" alt="" />
		<p class="md:text-left">
			Premier Pro - After Effect - Illustrator - Figma - Blender -
			HTML - CSS
		</p>
		</div>
	</div>
	
		</section>
	
		<section class="h-full">
		<CardLoader/>
		</section>
	</section>
	