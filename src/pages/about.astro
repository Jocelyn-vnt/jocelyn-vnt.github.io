---
import Layout from "../layouts/BlogPost.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import HeaderLink from "../components/HeaderLink.astro";
import CardLoader from "../components/CardLoader.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ProjectCard from "../components/ProjectCard.astro";
---

<head lang="en">
  <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
</head>
<div class="fixed flex w-full justify-center items-center pt-5 z-50">
  <Header />
</div>

<!-- Section parallaxe -->
<div class="absolute inset-0  h-screen ">
  <!-- Div 1 -->
   <div class="hover:bg-red">
  <div class="parallax bg-white rounded-lg shadow-lg p-10 absolute top-[100%] left-[10%] px-5 py-3 z-10 hover:bg-red-100"
    data-speed="-2">
    <div class="flex gap-2 p-0 ">

      <h2 class="text-black font-bold hover:bg-red">Hover me</h2>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5" />
      </svg>      
    </div>
  </div>
  

</div>

  <!-- Div 2 -->
  <div class="parallax bg-white rounded-lg shadow-lg px-5 py-3 absolute top-[150%] left-[80%] z-50"
    data-speed="-1.5">
    <div class="flex gap-2">
      <h2 class="text-black font-bold">Hover me</h2>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5" />
      </svg>
      
      
    </div>
  </div>

  <!-- Div 3 -->
  <div class="parallax bg-white rounded-lg shadow-lg p-10 absolute top-[300%] left-[10%] px-5 py-3 z-10"
    data-speed="-3">
    <div class="flex gap-2">
      <h2 class="text-black font-bold">Hover me</h2>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 5.99 5.99 0 0 0-1.925 3.547 5.975 5.975 0 0 1-2.133-1.001A3.75 3.75 0 0 0 12 18Z" />
      </svg>
      
    </div>
    
  </div>
</div>

<section class="flex text-white py-40 gap-10 justify-center z-30">
  <section class="flex px-40 gap-36 justify-center items-center flex-col">
    <div class="w-full">
      <div class="w-full">
        <div class="w-full">
          <img class="w-full h-auto mx-auto" src="/JV.svg" alt="" />
        </div>
        <div class="flex w-full justify-center align-right items-end gap-10">
          <div class="flex flex-col items-center gap-5">
            <ul class="flex gap-5">
              <li class="border p-2 ">Web Design</li>
              <li class="border p-2 ">Motion Design</li>
              <li class="border p-2 ">UI Design</li>
            </ul>
            <p class="text-md font-anuphan w-96 text-center">
              Creative and passionate about digital design, I specialize in graphic design, UI/UX design and animation.
              I have worked on several projects, combining aesthetics and utility.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Section avec les expériences, compétences, etc. -->
    <div class="grid grid-cols-1 md:grid-cols-2 text-white font-anuphan text-sm gap-8">
      <!-- EDUCATION -->
      <div class="flex flex-col gap-[20px] md:items-end text-right">
        <img class="w-auto max-h-10" src="/Edu.svg" alt="" />
        <ul>
          <li class="font-bold text-md">High School Diploma STI2D :</li>
          <li>Specialty Information and Digital Systems</li>
          <li>High School, Gustave Eiffel, Bordeaux</li>
        </ul>
        <ul>
          <li class="font-bold text-md">BUT Multimedia and Internet Professions :</li>
          <li>Digital Creation Course</li>
          <li>IUT, Limoges (87)</li>
        </ul>
      </div>

      <!-- EXPERIENCES -->
      <div class="flex flex-col gap-[20px] md:items-start">
        <img class="w-auto max-h-10" src="/Xp.svg" alt="" />
        <ul>
          <li class="font-bold text-md">SAYTOUTCOM (87)</li>
          <li>Graphic Design - Motion design - Video editing</li>
        </ul>
        <ul>
          <li class="font-bold text-md">WENZEO (33) :</li>
          <li>Video editing - Graphic Design - Photo editing</li>
        </ul>
      </div>

      <!-- SKILLS -->
      <div class="flex flex-col gap-[20px] md:items-end">
        <img class="w-auto max-h-10" src="/Skills.svg" alt="" />
        <p class="md:text-right w-96">
          Graphic Design Illustration, Brand Design, Video Editing, Motion Design, UI/UX, Web Design. Communication.
        </p>
      </div>

      <!-- SOFTWARE -->
      <div class="flex flex-col gap-[20px] md:items-start">
        <img class="w-auto max-h-10" src="/Software.svg" alt="" />
        <p class="md:text-left">
          Premier Pro - After Effect - Illustrator - Figma - Blender - HTML - CSS
        </p>
      </div>
    </div>

    <a href="/blog"
      class="px-5 py-3 border rounded-full font-anuphan font-bold hover:bg-white hover:border-white hover:text-black">Projects</a>
  </section>
</section>



