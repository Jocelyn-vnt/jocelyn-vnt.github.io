---
// src/pages/about.astro
import Layout from "../layouts/BlogPost.astro";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import HeaderLink from "../components/HeaderLink.astro";
import CardLoader from "../components/CardLoader.astro";
import MeshGradientBackground from "../components/MeshGradientBackground.astro"; // AJOUT
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import ProjectCard from "../components/ProjectCard.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  
  <!-- AJOUT : Mesh Gradient Background -->
  <MeshGradientBackground />

  <!-- SUPPRIMÉ : Ancien background avec effet glassmorphisme -->
  
  <div class="fixed flex w-full justify-center items-center pt-5 z-50">
    <Header />
  </div>

  <!-- Éléments parallaxe glassmorphisme -->
  <div class="hover:scale-105 transition-transform duration-300">
    <div
      class="parallax group bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass p-8 absolute top-[100%] left-[10%] z-10 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 animate-glass-float"
      data-speed="-2"
    >
      <div class="flex gap-3 p-0 items-center">
        <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">
          Hover me
        </h2>
        <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 text-purple-300 group-hover:rotate-12 transition-transform duration-300"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
          ></path>
        </svg>
      </div>
      <figure
        class="absolute -top-[70px] right-0 opacity-0 group-hover:opacity-100 transition-all duration-500 transform group-hover:scale-105"
      >
        <div class="relative">
          <img
            src="/Kusmi-Tea.jpg"
            alt="Image Logo KusmiTea"
            class="w-40 h-auto rounded-xl shadow-glass border border-glass"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent rounded-xl"></div>
        </div>
        <figcaption
          class="absolute top-full mt-3 flex text-sm w-full"
        >
          <a href="/" class="flex bg-white/10 backdrop-blur-md border border-glass text-white hover:bg-white/20 hover:text-purple-300 font-anuphan font-medium p-3 w-full rounded-lg transition-all duration-300 justify-center shadow-glass">
            See more
          </a>
        </figcaption>
      </figure>
    </div>
  </div>

  <div
    class="parallax bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass px-6 py-4 absolute top-[150%] right-[10%] z-50 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300"
    data-speed="-1.5"
    style="animation-delay: 2s;"
  >
    <div class="flex gap-3 items-center">
      <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">
        Hover me
      </h2>
      <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 text-purple-300"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
        ></path>
      </svg>
    </div>
  </div>

  <div
    class="parallax bg-white/10 backdrop-blur-md border border-glass rounded-2xl shadow-glass p-8 absolute top-[300%] left-[10%] z-10 hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 animate-glass-float"
    data-speed="-3"
    style="animation-delay: 4s;"
  >
    <div class="flex gap-3 items-center">
      <h2 class="text-white font-bold hidden sm:block font-anuphan text-lg">Hover me</h2>
      <h2 class="text-white font-bold sm:hidden font-anuphan text-lg">Click me</h2>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 text-purple-300"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672Zm-7.518-.267A8.25 8.25 0 1 1 20.25 10.5M8.288 14.212A5.25 5.25 0 1 1 17.25 10.5"
        ></path>
      </svg>
    </div>
  </div>

  <!-- Section Content avec glassmorphisme -->
  <section
    class="flex flex-col text-white py-20 gap-8 justify-center items-center z-30 relative"
  >
    <section
      class="flex flex-col px-5 md:px-40 gap-8 md:gap-12 justify-center items-center"
    >
      <div class="w-full">
        <div class="w-full">
          <div class="relative flex flex-col items-center justify-center mb-12">
            <h1 class="text-[248px] font-bold font-anuphan relative text-white drop-shadow-2xl">
              Jocelyn
              <span
                class="absolute text-purple-400 font-alex text-[144px] font-normal bottom-0 right-0 transform drop-shadow-lg"
                >Vinatié</span
              >
            </h1>
          </div>
          <div
            class="flex flex-col md:flex-row w-full justify-center items-center gap-8"
          >
            <div class="flex flex-col items-center gap-6">
              <div class="bg-white/10 backdrop-blur-lg border border-glass rounded-2xl p-8 shadow-glass hover:bg-white/15 transition-all duration-300">
                <p
                  class="text-lg font-anuphan w-full text-center font-alex leading-relaxed"
                >
                  Creative and passionate about digital design, I specialize in
                  graphic design, UI/UX design and animation. I have worked on
                  several projects, combining aesthetics and utility.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

     <div class="max-w-7xl mx-auto">
        <!-- Grille principale améliorée -->
        <div class="grid grid-cols-6 grid-rows-5 gap-6 h-[800px] mb-8">
            
            <!-- EDUCATION - Position optimisée -->
            <div class="col-span-2 row-span-2 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col">
                <div class="flex justify-center pb-4">
                    <h1 class="text-2xl font-bold font-anuphan text-white">Education</h1>
                </div>
                <div class="flex flex-col flex-1 space-y-4">
                    <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex-1">
                        <h3 class="font-bold text-lg text-purple-300 mb-2">High School Diploma STI2D</h3>
                        <p class="text-gray-200 text-sm">Specialty Information and Digital Systems</p>
                    </div>
                    <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex-1">
                        <h3 class="font-bold text-lg text-purple-300 mb-2">BUT Multimedia</h3>
                        <p class="text-gray-200 text-sm">Digital Creation Course</p>
                    </div>
                </div>
            </div>

            <!-- EXPERIENCES - Position optimisée -->
            <div class="col-span-2 row-span-2 col-start-1 row-start-3 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col">
                <div class="flex justify-center pb-4">
                    <h1 class="text-2xl font-bold font-anuphan text-white">Experiences</h1>
                </div>
                <div class="flex flex-col flex-1 space-y-4">
                    <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex-1">
                        <h3 class="font-bold text-lg text-purple-300 mb-2">SAYTOUTCOM (87)</h3>
                        <p class="text-gray-200 text-sm">Graphic Design - Motion design - Video editing</p>
                    </div>
                    <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex-1">
                        <h3 class="font-bold text-lg text-purple-300 mb-2">WENZEO (33)</h3>
                        <p class="text-gray-200 text-sm">Video editing - Graphic Design - Photo editing</p>
                    </div>
                </div>
            </div>

            <!-- CONTACTS - Section principale -->
            <div class="col-span-4 row-span-3 col-start-3 row-start-1 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col">
                <div class="flex justify-center pb-6">
                    <h1 class="text-3xl font-bold font-anuphan text-white">Contacts</h1>
                </div>
                <div class="flex gap-6 justify-between flex-1">
                    <!-- Formulaire -->
                    <form class="flex flex-col gap-3 rounded-xl w-3/5 bg-white/5 p-4 border border-white/10 h-fit">
                        <label class="text-white font-medium font-anuphan text-sm">Name</label>
                        <input type="text" required class="p-2 rounded-lg text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all text-sm">
                        
                        <label class="text-white font-medium font-anuphan text-sm">Email</label>
                        <input type="email" required class="p-2 rounded-lg text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all text-sm">
                        
                        <label class="text-white font-medium font-anuphan text-sm">Message</label>
                        <textarea required class="p-2 rounded-lg text-black bg-white/90 border border-white/20 focus:bg-white focus:outline-none focus:ring-2 focus:ring-purple-400 transition-all min-h-[80px] resize-none text-sm"></textarea>
                        
                        <button type="submit" class="bg-purple-500/80 backdrop-blur-md hover:bg-purple-600/80 text-white p-2 rounded-lg transition-all duration-300 font-anuphan font-medium border border-purple-400/30 hover:border-purple-400/50 shadow-glass text-sm">
                            Send Message
                        </button>
                    </form>
                    
                    <!-- CV Section -->
                    <div class="flex w-1/3 flex-col justify-center items-center bg-white/5 p-6 rounded-xl border border-white/10 h-fit">
                        <h3 class="text-white font-anuphan font-bold text-lg mb-4 text-center">Download my CV</h3>
                        <div class="p-4 bg-white rounded-xl shadow-glass mb-4">
                            <div class="w-32 h-32 bg-gray-200 flex items-center justify-center text-gray-500 text-xs">
                                QR Code
                            </div>
                        </div>
                        <button class="bg-purple-500/80 text-white px-4 py-2 rounded-lg hover:bg-purple-600/80 transition-all duration-300 text-sm font-medium">
                            Download PDF
                        </button>
                    </div>
                </div>
            </div>

            <!-- LANGUAGES -->
            <div class="col-span-2 row-span-1 col-start-3 row-start-4 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col justify-center">
                <div class="pb-4">
                    <h1 class="text-2xl font-bold font-anuphan text-white text-center">Languages</h1>
                </div>
                <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex justify-center items-center">
                    <div class="flex gap-4 text-gray-200">
                        <span class="px-3 py-1 bg-purple-500/30 rounded-lg">English</span>
                        <span class="px-3 py-1 bg-purple-500/30 rounded-lg">French</span>
                        <span class="px-3 py-1 bg-purple-500/30 rounded-lg">Spanish</span>
                    </div>
                </div>
            </div>

            <!-- HOBBIES -->
            <div class="col-span-2 row-span-1 col-start-5 row-start-4 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col justify-center">
                <div class="flex justify-center pb-4">
                    <h1 class="text-2xl font-bold font-anuphan text-white">Hobbies</h1>
                </div>
                <div class="bg-white/5 rounded-xl p-4 border border-white/10 flex justify-center items-center">
                    <div class="flex gap-3 text-gray-200 flex-wrap justify-center">
                        <span class="px-3 py-1 bg-blue-500/30 rounded-lg text-sm">Movies</span>
                        <span class="px-3 py-1 bg-green-500/30 rounded-lg text-sm">Gaming</span>
                        <span class="px-3 py-1 bg-yellow-500/30 rounded-lg text-sm">Cats</span>
                    </div>
                </div>
            </div>

        <!-- SKILLS avec SVG personnalisés -->
        <div class="col-span-3 row-span-1 row-start-5 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col justify-center">
          <div class="flex justify-center pb-4">
            <h1 class="text-2xl font-bold font-anuphan text-white">Skills</h1>
          </div>
          <div class="bg-white/5 rounded-xl p-4 border border-white/10">
            <div class="flex gap-4 flex-wrap justify-center">
              
              <!-- Photoshop -->
              <div class="flex items-center gap-2 px-3 py-2 bg-blue-500/30 rounded-lg hover:bg-blue-500/50 transition-all duration-300">
                <img src="/ps.svg" alt="Photoshop" class="w-5 h-5">
              </div>
              
              <!-- Figma -->
              <div class="flex items-center gap-2 px-3 py-2 bg-purple-500/30 rounded-lg hover:bg-purple-500/50 transition-all duration-300">
                <img src="/figma.svg" alt="Figma" class="w-5 h-5">
              </div>
              
              <!-- HTML/CSS -->
              <div class="flex items-center gap-2 px-3 py-2 bg-orange-500/30 rounded-lg hover:bg-orange-500/50 transition-all duration-300">
                <img src="/html.svg" alt="HTML/CSS" class="w-5 h-5">
              </div>
              
              <!-- JavaScript -->
              <div class="flex items-center gap-2 px-3 py-2 bg-yellow-500/30 rounded-lg hover:bg-yellow-500/50 transition-all duration-300">
                <img src="/js.svg" alt="JavaScript" class="w-5 h-5">
              </div>
              
              <!-- After Effects -->
              <div class="flex items-center gap-2 px-3 py-2 bg-indigo-500/30 rounded-lg hover:bg-indigo-500/50 transition-all duration-300">
                <img src="/ae.svg" alt="After Effects" class="w-5 h-5">
              </div>

                <!-- IA -->
              <div class="flex items-center gap-2 px-3 py-2 bg-indigo-500/30 rounded-lg hover:bg-indigo-500/50 transition-all duration-300">
                <img src="/ai.svg" alt="After Effects" class="w-5 h-5">
              </div>
              
              <!-- Premiere Pro -->
              <div class="flex items-center gap-2 px-3 py-2 bg-pink-500/30 rounded-lg hover:bg-pink-500/50 transition-all duration-300">
                <img src="/pr.svg" alt="Premiere Pro" class="w-5 h-5">
              </div>
            </div>
          </div>
        </div>

            <!-- SOCIAL LINKS -->
            <div class="col-span-3 row-span-1 col-start-4 row-start-5 bg-white/10 backdrop-blur-lg border border-white/20 rounded-2xl p-6 shadow-glass hover:bg-white/15 hover:shadow-glass-hover transition-all duration-300 flex flex-col justify-center">
                <div class="flex justify-center pb-4">
                    <h1 class="text-2xl font-bold font-anuphan text-white">Follow Me</h1>
                </div>
                <div class="bg-white/5 rounded-xl p-4 border border-white/10">
                    <div class="flex gap-4 justify-center">
                        <a href="#" class="w-10 h-10 bg-blue-500/30 rounded-lg flex items-center justify-center hover:bg-blue-500/50 transition-all duration-300">
                            <span class="text-white text-sm font-bold">Li</span>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-800/30 rounded-lg flex items-center justify-center hover:bg-gray-800/50 transition-all duration-300">
                            <span class="text-white text-sm font-bold">Gh</span>
                        </a>
                        <a href="#" class="w-10 h-10 bg-pink-500/30 rounded-lg flex items-center justify-center hover:bg-pink-500/50 transition-all duration-300">
                            <span class="text-white text-sm font-bold">Ig</span>
                        </a>
                        <a href="#" class="w-10 h-10 bg-blue-400/30 rounded-lg flex items-center justify-center hover:bg-blue-400/50 transition-all duration-300">
                            <span class="text-white text-sm font-bold">Tw</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

      <a
        href="/"
        class="px-8 py-4 bg-white/10 backdrop-blur-lg border border-glass rounded-full font-anuphan font-bold hover:bg-white/20 hover:border-purple-400/50 hover:text-purple-300 transition-all duration-300 shadow-glass hover:shadow-glass-hover"
        >Projects</a
      >
    </section>
  </section>
